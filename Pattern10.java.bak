class Pattern10 {
    public static void main(String[] args) {
        int n = 6;
        int i, j, k, l,m;
        
        for (i = 0; i <= n; i++) 
			{  
            for (j = 0; j <= n-i-1; j++) 
				{  
                System.out.print(" ");
      			}
           for (k = 1; k <= i; k++) 
				{
			   for (l = 0; l < n; l++)
					{
				     for (m = 0; m <= i; m++)
				{ 
               System.out.print("*");
           }
            System.out.println();
					}
				}
        }
    }
}
	


 
	 
 
   

