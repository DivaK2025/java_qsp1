class CharNoPtr {
    public static void main(String[] args) {
        int n = 4; 
        char letter = 'a'; 
        int number = 1; 
        
        
        for (int i = 1; i <= n; i++) {
            
            
            if (i % 2 != 0) {
                
                for (int j = 1; j <= (2 * i - 1); j++) {
                    System.out.print(letter + " "); 
                    letter++; 
                }
            } else {
                
                for (int j = 1; j <= (2 * i - 1); j++) {
                    System.out.print(number + " "); 
                    number++; 
                }
            }
            
            System.out.println(); 
        }
    }
}
